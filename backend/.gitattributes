# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Batch files (Windows)
*.bat text eol=crlf

# Shell scripts (Unix)
*.sh text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf

# Binary files
*.db binary
*.sqlite binary
*.sqlite3 binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.mp4 binary
*.mp3 binary
*.wav binary
*.pdf binary